{
    "compilerOptions": {
      "target": "es6",
      
      "baseUrl" : ".",
    "paths": {
      "react": ["./node_modules/@types/react"],
      //Aliases
      "@/*": ["./src/*"],
      "@api/*": ["./api/*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@config/*": ["./config/*"],
      "@contexts/*": ["./contexts/*"],
      "@data/*": ["./data/*"],
      "@hooks/*": ["./hooks/*"],
      "@layouts/*": ["./layouts/*"],
      "@models/*": ["./models/*"],
      "@pages/*": ["./pages/*"],
      "@redux/*": ["./redux/*"],
      "@styles/*": ["./styles/ui/*"],
      "@theme/*": ["./theme/*"],
      "@utils/*": ["./utils/*"],
      },
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "outDir": "./dist",
      "typeRoots": ["./node_modules/@types"],  // "typeRoots": [] -> won't work
      "types": ["node"],                      // "types": [] -> won't work
      },
      "include": ["src", "scripts"],
      "exclude": [
        "node_modues"
      ]
  }